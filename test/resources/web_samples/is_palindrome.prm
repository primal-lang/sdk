isPalindrome(s) = isPalindromeHelper(s, 0, str.length(s) - 1)

isPalindromeHelper(s, start, end) = if (start >= end)
                                        true
                                    else if (s[start] != s[end])
                                        false
                                    else
                                        isPalindromeHelper(s, start + 1, end - 1)

main = isPalindrome("level")