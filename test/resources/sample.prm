greeting = "Hello, world!"

farewell = 'Goodbye, world!'

pi = 3.14

rationalNumber = pi

isToday = true

// Returns true if x is equal to zero
isZero(x) = x == 0

// Returns true if x is an even number
isEven(x) = (x % 2) == 0

// Returns true if x is an odd number
isOdd(x) = !isEven(x)

isBiggerThan10(x) = if x > 10   // if x is greater than 10, return true
                        true
                    else        // otherwise, return false
                        false

factorial(n) = if (n < 0)
			       error.throw(0, 'Cannot calculate factorial of a negative number')
			   else if (n == 0)
				   1
			   else
                   n * factorial(n - 1)

main = factorial(4)