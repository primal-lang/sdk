# Returns true if x is equal to zero
isZero(x) = eq(x, 0)

# Returns true if x is an even number
isEven(x) = isZero(mod(x, 2))

# Returns true if x is an odd number
isOdd(x) = not(isEven(x))

isBiggerThan10(x) = if(
    # if x is greater than 10, return true
    gt(x, 10), true,
    false # otherwise, return false
)

factorial(n) = if(eq(n, 0), 1, mul(n, factorial(sub(n, 1))))

factorial(n) = if(
    isNegative(n), error('Negative number'),
    isZero(n), 1,
    mul(n, factorial(dec(n)))
)

fib(n) = if(eq(n, 0), 0, if(eq(n, 1), 1, add(fib(sub(n, 1)), fib(sub(n, 2)))))

main = factorial(4)